nav
  font-size 1.5rem
  span.title
    font-weight bold
  ul
    font-size 0
    display inline-block
    li
      display inline-block
      &.active
        a
          color #222
      a
        padding 1rem
        display inline-block
        font-size 1.5rem

ul.fields
  margin 0.1rem
  li
    list-style none
    margin 0.1rem

ul.input-fields
  li
    margin 0 0.1rem
    input
      margin 0
      border-radius 0
    &:not(:last-child) input
      border-bottom none
    &:last-child input
      border-radius 0 0 4px 4px
    &:first-child input
      border-radius 4px 4px 0 0

.button-danger
  background-color #FF992E
  border-color #FF992E
  color white
  &:hover
    color white
    background-color darken(#FF992E, 20%)
    border-color darken(#FF992E, 20%)

.error
  background-color #FF992E
  border-radius 4px
  padding 0.25rem
  margin 0.25rem
  width 100%
  color white
  display none

.BiBTeX
  margin 1rem
  padding 1rem
  border-radius 4px
  background-color darken(white, 10%)
  font-size 1.1rem
